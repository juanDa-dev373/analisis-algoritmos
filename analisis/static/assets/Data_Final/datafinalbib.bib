 journal = {Telematics and Informatics Reports},
 number = {Sin Valor},
 pages = {100040-Sin Valor},
 publisher = {Sin valor},
 title = {The influences of computer gameplay and social media use on computer science identity and computer science career interests},
 volume = {9},
 year = {2023}
