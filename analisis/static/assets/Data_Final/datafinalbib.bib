 pages = {1-10},
 publisher = {Sin valor},
 title = {Development and empirical user-centered evaluation of semantically-based query recommendation for an electronic health record search engine},
 volume = {67},
 year = {2017}
}

@article{Development_and_Evaluation_of_a_New_Security_and_Privacy_Track_in_a_Health_Informatics_Graduate_Program:_Multidisciplinary_Collaboration_in_Education,
 abstract = {Background
