 doi = {Sin Valor},
 journal = {Sin valor},
 number = {Sin Valor},
 pages = {157–167-Sin Valor},
 publisher = {IBM Corp.},
 title = {Graphics programming in elm develops math knowledge &amp; social cohesion},
 volume = {Sin Valor},
 year = {2018}
}

